<dataConfig>
    <dataSource type="JdbcDataSource"
                driver="org.postgresql.Driver"
                url="${dataimporter.datasource.url}"
                user="${dataimporter.datasource.user}"
                password="${dataimporter.datasource.password}"/>
    <document name="titles">
        <entity name="titles" query="select * from titles">
            <field column="id" name="tconst"/>
            <field column="title_type" name="title_type"/>
            <field column="primary_title" name="primary_title"/>
            <field column="original_title" name="original_title"/>
            <field column="is_adult" name="is_adult"/>
            <field column="start_year" name="start_year"/>
            <field column="end_year" name="end_year"/>
            <field column="runtime_mins" name="runtime_mins"/>
            <field column="genres" name="genres"/>
            <entity name="ratings"
                    query="select average_rating, num_votes from ratings where tconst='${titles.tconst}'">
                <field column="average_rating" name="average_rating"/>
                <field column="num_votes" name="num_votes"/>
            </entity>
        </entity>
    </document>
</dataConfig>